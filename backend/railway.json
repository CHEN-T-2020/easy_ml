{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm run build"
  },
  "deploy": {
    "startCommand": "node dist/index.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "on_failure"
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production"
      }
    }
  },
  "regions": ["us-west1"],
  "services": [
    {
      "name": "backend",
      "source": {
        "repo": "your-github-username/news-classifier-platform",
        "branch": "main"
      }
    }
  ]
}